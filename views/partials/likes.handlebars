<h1>Movies I Likes</h1>

{{#if userLikes}}
<ul>
    <li>Test</li>
    {{#each userLikes}}
    <li>
        <a href="/movie/{{id}}">{{title}}</a>
        <form method="POST" action="/likes">
            <!-- Is this even the correct way to do it? -->
            <input type="hidden" name="_method" value="PATCH">
            <input type="hidden" name="movieId" value="{{this.id}}">
            <input type="hidden" name="operation" value="remove">
            <button type="submit">Remove</button>
        </form>
    </li>
    {{/each}}
</ul>
{{else}}
<p>You haven't liked any movies yet.</p>
{{/if}}