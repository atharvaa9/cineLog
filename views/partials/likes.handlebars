<h1>Movies I Like</h1>

{{#if userLikes}}
<ul>
    {{#each userLikes}}
    <li>
        <a href="/movie/{{id}}">{{title}}</a>
        <form method="POST" action="/profile/likes">
            <input type="hidden" name="_method" value="PATCH">
            <input type="hidden" name="movieId" value="{{id}}" hidden>
            <input type="hidden" name="operation" value="remove">
            <button type="submit">Remove from likes</button>
        </form>
    </li>
    {{/each}}
</ul>
{{else}}
<p>You haven't liked any movies yet.</p>
{{/if}}